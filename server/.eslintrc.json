{
    "extends": "standard",
    "plugins": ["jest"],
    "env": {
        "jest/globals": true
    },
    "rules": {
        "indent": [0, 2, {
            "SwitchCase": 1,
            "MemberExpression": "off",
            "flatTernaryExpressions": true
        }],
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "never"],
        "no-console": 1,
        "no-unreachable": 1,
        "no-useless-escape": 0,
        "no-unused-vars": ["warn", { "args": "none" }],
        "require-await": "warn"
    }

}